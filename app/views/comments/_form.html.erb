<div class="comment-form">
  <%= form_with model: Comment.new do |form| %>
    <div class="form-group">
      <%= form.label :comment, "Leave a comment" %>
      <%= form.text_area :body, rows: 3, class: "form-control", placeholder: "Your comment here.." %>
    </div>
    <div class="form-group">
      <%= form.label :rating, "Rating" %>
      <%= form.select :rating, [*1..5] %>
    </div>
    <%= hidden_field :comment, :image_id, value: image_id %>
    <%= form.submit class: "btn btn-primary" %>
  <% end %>
</div>
