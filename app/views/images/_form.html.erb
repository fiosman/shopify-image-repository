<div class="col-md-6 offset-md-3 mt-5">
  <h1>Upload an image!</h1>
  <form action="<%= images_url %>" method="POST">
    <input type="hidden" name="_method" value="POST">
    <input type="hidden" name="authenticity_token" value=<%= form_authenticity_token %>>
    <div class="form-group">
      <label for="image_title">Title</label>
      <input type="text" name="image[title]" class="form-control" id="imageTitle" placeholder="Enter image title..." required="required">
    </div>
    <div class="form-group">
      <label for="image_body" required="required">Description</label>
      <textarea name="image[body]" class="form-control" id="imageBody" placeholder="Enter description..." required="required" rows="3"></textarea>
    </div>
    <div class="form-group mt-3">
      <input type="file" name="image[file]">
    </div>
    <hr>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
